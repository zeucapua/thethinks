---
import SiteLayout from "./SiteLayout.astro";

const { title, description, date } = Astro.props;
---

<SiteLayout title={title + " | The Thinks"}>

  <section class="flex flex-col gap-4 items-center">
    <h1 class="text-5xl font-bold text-center">{title}</h1>
    <h3 class="text-xl font-bold italic">{description}</h3>
    <p>
      Written by <a href="https://zeudev.vercel.app" class="underline decoration-primary">Zeu</a> 
      | {date}
    </p>
  </section>
  <div class="divider lg:py-8" />
  <article class="prose prose-md lg:prose-lg w-full lg:max-w-5xl">
    <slot />
  </article>

</SiteLayout>
