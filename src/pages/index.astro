---
import SiteLayout from "../layouts/SiteLayout.astro";
import BlogCard from "../components/BlogCard.astro";
import { getCollection } from "astro:content";
const blogs = await getCollection("blogs");
blogs .sort((a, b) => {
  const pubDateA = new Date(a.data.publish_date);
  const pubDateB: Date = new Date(b.data.publish_date);
  return pubDateB.getTime() - pubDateA.getTime();
});
---

<SiteLayout title="The Thinks by Zeu">

<h2 class="text-4xl md:text-5xl text-secondary underline underline-offset-8 font-bold font-bebasneue">
  Recently Released
</h2>
<section class="flex flex-col gap-8 mx-auto">
  {
    blogs.map( entry => ( <BlogCard blog={entry} /> ))
  }
</section>


</SiteLayout>

